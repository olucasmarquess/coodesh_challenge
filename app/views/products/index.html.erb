<h1>Products</h1>

<% if @products.any? %>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Code</th>
        <th>Barcode</th>
        <th>Url</th>
        <th>Quantity</th>
        <th>Categories</th>
        <th>Packaging</th>
        <th>Brands</th>
        <th>Image_Url</th>
        <th>Imported At</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
            <td><%= product.product_name %></td>
            <td><%= product.code %></td>
            <td><%= product.barcode %></td>
            <td><%= product.url %></td>
            <td><%= product.quantity %></td>
            <td><%= product.categories %></td>
            <td><%= product.packaging %></td>
            <td><%= product.brands %></td>
            <td><%= product.image_url %></td>
            <td><%= product.imported_t %></td>
            <td><%= product.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @products %>
<% else %>
  <p>No products found.</p>
<% end %>
